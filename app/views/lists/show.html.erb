<h2><%= @list.name %></h2>

<p><strong>Bookmarks</strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <% @movie = Movie.find(bookmark.movie_id) %>
    <li class="list-group-item">
      <%= @movie.title %> - <%= @movie.overview %> - <%= @movie.rating %> - <%= bookmark.comment %>
      <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a new bookmark', new_list_bookmark_path %>
<%= link_to 'Back to list of lists', lists_path %>
